# Mem0Evomem 生產環境變量配置範例
# 複製此檔案為 .env 並填入實際值

# ============================================
# 核心配置
# ============================================

# 環境類型 (development / staging / production)
ENVIRONMENT=production

# 應用名稱與版本
APP_NAME=Mem0Evomem
APP_VERSION=1.0.0

# ============================================
# OpenAI API 配置 (LLM 組件)
# ============================================

# OpenAI API Key (必填 - 用於 Memory 實例創建)
OPENAI_API_KEY=sk-...

# OpenAI 模型選擇
OPENAI_MODEL=gpt-4-turbo-preview

# OpenAI API Base URL (可選 - 用於代理)
# OPENAI_API_BASE=https://api.openai.com/v1

# ============================================
# BGE-M3 Embedder 配置
# ============================================

# BGE-M3 模型路徑 (默認從 HuggingFace 下載)
BGE_M3_MODEL=BAAI/bge-m3

# BGE-M3 設備選擇 (cpu / cuda / mps)
BGE_M3_DEVICE=cpu

# BGE-M3 精度 (true / false)
BGE_M3_USE_FP16=true

# BGE-M3 最大序列長度
BGE_M3_MAX_LENGTH=8192

# ============================================
# ChromaDB 向量數據庫配置
# ============================================

# ChromaDB 持久化目錄
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# ChromaDB 集合名稱
CHROMA_COLLECTION_NAME=mem0evomem_memories

# ============================================
# Docker 配置
# ============================================

# Docker 資源限制 (RAM)
DOCKER_MEMORY_LIMIT=2g

# Docker CPU 限制
DOCKER_CPUS=1.0

# Docker 健康檢查間隔 (秒)
DOCKER_HEALTH_INTERVAL=30

# ============================================
# 數據備份配置
# ============================================

# 備份目錄
BACKUP_DIRECTORY=./data/backups

# 自動備份間隔 (小時)
BACKUP_INTERVAL_HOURS=24

# 備份保留天數
BACKUP_RETENTION_DAYS=30

# ============================================
# 監控與日誌配置
# ============================================

# 日誌級別 (DEBUG / INFO / WARNING / ERROR)
LOG_LEVEL=INFO

# 日誌格式 (json / text)
LOG_FORMAT=json

# 日誌輸出路徑
LOG_PATH=./logs/mem0evomem.log

# 啟用性能監控
ENABLE_METRICS=true

# Prometheus 指標端口
METRICS_PORT=9090

# ============================================
# 安全配置
# ============================================

# API 訪問密鑰 (如果需要 API 服務)
API_SECRET_KEY=your-secret-key-here

# 允許的 CORS 來源
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# 啟用 HTTPS
ENABLE_HTTPS=false

# SSL 證書路徑 (如果啟用 HTTPS)
# SSL_CERT_PATH=./certs/cert.pem
# SSL_KEY_PATH=./certs/key.pem

# ============================================
# 雲平台配置 (根據選擇的平台填寫)
# ============================================

# AWS ECS/Fargate
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# ECS_CLUSTER_NAME=mem0evomem-cluster
# ECS_SERVICE_NAME=mem0evomem-service

# Google Cloud Run
# GCP_PROJECT_ID=your-project-id
# GCP_REGION=us-central1
# GCP_SERVICE_ACCOUNT_KEY=/path/to/service-account.json

# Azure Container Instances
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=mem0evomem-rg
# AZURE_LOCATION=eastus

# ============================================
# 開發環境專用
# ============================================

# 啟用調試模式 (僅開發環境)
DEBUG=false

# 熱重載 (僅開發環境)
RELOAD=false

# 測試模式
TESTING=false
